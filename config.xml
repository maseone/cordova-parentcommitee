<?xml version='1.0' encoding='utf-8'?>
<widget id="com.parentcommittee" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Родительский коммитет</name>
    <description>
        Портал для неравнодушных родителей, которые интересуются жизнью своего ребёнка в образовательных учреждениях.
    </description>
    <author email="info@infinnity.ru" href="http://infinnity.ru">
        Infinnity Solutions Co.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="org.apache.cordova.media" spec="~0.2" />
    <plugin name="org.apache.cordova.device" spec="~0.3" />
    <plugin name="com.phonegap.plugins.PushPlugin" spec="https://github.com/phonegap-build/PushPlugin.git" />
    <plugin name="org.apache.cordova.statusbar" spec="~0.1.10" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
</widget>